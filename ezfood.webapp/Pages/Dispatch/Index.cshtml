@page
@model ezfood.webapp.Pages.Dispatch.IndexModel
@{
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Dispatch Record</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Export MPI</a>
    </div>

    <div class="col-12">
        <form method="post">
            @if (Model.InvoiceResult?.Invoices?.Count() > 0)
            {
                <table class="table table-striped border table-responsive table-body">
                    <tr class="table-secondary">
                        <th class="col-md-1">
                            Date
                        </th>
                        <th class="col-md-2">
                            Customer Name
                        </th>
                        <th class="col-md-1">
                            Order Number
                        </th>
                        <th class="col-md-1">
                            Quantity Loaded
                        </th>
                        <th class="col-md-1">
                            Best Before Date
                        </th>
                        <th class="col-md-1">
                            Time
                        </th>
                        <th class="col-md-1">
                            Temp (Before loading)
                        </th>
                        <th class="col-md-1">
                            Vehicle is cleaned
                        </th>
                        <th class="col-md-1">
                            Recieved By
                        </th>
                        <th class="col-md-2">
                            Signature
                        </th>
                    </tr>
                    @foreach (var item in Model.InvoiceResult.Invoices)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.DateString)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Contact.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.InvoiceNumber)
                            </td>
                            <td>
                                @Html.EditorFor(m => item.QuantityLoaded)
                            </td>
                            <td>
                                @Html.EditorFor(m => item.BestBefore)
                            </td>
                            <td>
                                @Html.EditorFor(m => item.Time)
                            </td>
                            <td>
                                @Html.EditorFor(m => item.Temperature)
                            </td>
                            <td>
                                @Html.EditorFor(m => item.IsVehicleClean)
                            </td>
                            <td>
                                @Html.EditorFor(m => item.ReceivedBy)
                            </td>
                            <td>
                                @Html.EditorFor(m => item.Signature)
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No books available.</p>
            }
        </form>
    </div>
</div>
